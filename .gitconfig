[core]
	excludesfile = ~/.gitignore

[user]
	name = Aaron Adelson
	email = aaronsadelson@gmail.com

[color]
	ui = auto

[alias]
	br = branch
	ci = commit
	co = checkout
	df = diff
	pl = pull
	ps = push
	st = status -s
	lg = log --stat
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	last = cat-file commit HEAD
	merge = merge --no-ff
	fuckit = reset --hard

[rerere]
	enabled = 1
[push]
	default = upstream
